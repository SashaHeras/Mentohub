@using Mentohub.Domain.Entities;
@model List<Course>
@{
    ViewData["Title"] = "Home Page";
    int a = 0;
}

<style>
    .body {
        margin-left: 40px;
        margin-right: 40px;
    }

    .myImg {
        width: 260px;
        height: 150px;
    }

    #coursesList {
        margin-left: 40px;
        margin-right: 40px;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-gap: 10px;
    }

    .grid-item {
        padding: 20px;
        text-align: center;
    }

    .listElement {
        vertical-align: middle;
        height: 240px;
        font-size: 18px;
        margin-top: 15px;
        margin-right: 10px;
        margin-right: 10px;
        width: 280px;
        border-radius: 5px;
        padding-top: 3px;
        padding-bottom: 3px;
        padding-left: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .image-box {
        width: 250px;
        height: 140px;
    }

    a {
        text-decoration: none;
        color: black;
    }

        a:hover {
            text-decoration: none;
            color: black;
        }

        a:visited {
            text-decoration: none;
            color: black;
        }

    .courseName {
        color: black;
        font-size: 24px;
    }

    .course-name-block {
        margin-top: 10px;
    }

    .raiting {
        color: gold;
    }

    #coursesLine {
        display: flex;
    }


    .rating {
        display: inline-block;
        font-size: 0;
        position: relative;
    }

    .star {
        display: inline-block;
        font-size: 24px;
        cursor: pointer;
        color: #ddd;
        position: relative;
    }

        .star:before, .half-star:before {
            content: '\2605';
        }

        .star.filled:before, .half-star.filled:before {
            content: '\2605';
            color: #ffc107;
        }

    [data-value="1"] {
        margin-right: 10px;
    }

    [data-value="2"] {
        margin-right: 10px;
    }

    [data-value="3"] {
        margin-right: 10px;
    }

    [data-value="4"] {
        margin-right: 10px;
    }

    .half-star {
        position: absolute;
        width: 50%;
        height: 100%;
        left: 0;
        top: 0;
        overflow: hidden;
    }

        .half-star:before {
            position: absolute;
            left: -20px;
        }

    .carusel-pad {
        padding-bottom: 15px;
        padding-left: 15%;
    }
</style>

@functions
{
    public string PagerNumber(int number)
    {
        if (number != 0)
        {
            return "item";
        }

        return "item active";
    }
}

<partial name="/Views/Partial/Header.cshtml" />
<div class="body">
    <div id="sales">
    </div>
    <div id="filters">
    </div>

    <div id="courses">
        <div class="grid-container">
            @foreach (var c in Model)
            {
                string url = "https://mystudystorage.blob.core.windows.net/test/" + c.PicturePath;
                int rating = (int)c.Rating; // convert rating to integer
                double fraction = c.Rating - rating; // get the fractional part of the rating

                <div class="grid-item">
                    <div class="listElement">
                        <div class="image-box">
                            <img class="myImg" src="@url" alt="Title">
                        </div>
                        <div class="course-name-block">
                            <a class="courseName" href="/Course/Index/@c.Id">@c.Name</a>
                        </div>
                        <div class="raiting" style="font-size: 16px;">
                            @for (int i = 1; i <= 5; i++)
                            {
                                @if (i <= rating) // fill the stars up to the integer part of the rating
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else if (i == rating + 1 && fraction > 0) // fill the last star partially if there is a fractional part
                                {
                                    <i class="bi bi-star-half"></i>
                                }
                                else // leave the remaining stars empty
                                {
                                    <i class="bi bi-star"></i>
                                }
                            }
                        </div>
                        <div>
                            <div>$@c.Price.ToString().Replace(',','.')</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

